<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
       <!-- Cruise cabin type form -->
      <record model="ir.ui.view" id="tc_cruisecabin_view">
        <field name="name">tour.cruise.cabin.form</field>
        <field name="model">tour.cruise.cabin</field>
        <field name="priority" eval="60"/>
        <field name="arch" type="xml">
          <form string="Tour Cruise Cabin" version="7.0">
            <sheet>
              <label for="name" />
              <field name="name" />
              <newline />
              <label for="description" />
              <field name="description" />
            </sheet>
          </form>
        </field>
      </record>
 
