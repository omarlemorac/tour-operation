<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
      <!-- Product form -->
      <record model="ir.ui.view" id="tourpackage_view">
	<field name="name">touroperator.package.form</field>
	<field name="model">tour.package</field>
	<field name="priority" eval="20"/>
	<field name="arch" type="xml">
	  <form string="Tour Package" version="7.0">
	    <sheet>
	      <label for="name" />
	      <field name="name" />
	      <newline />
	      <group>
		<group>
		  <field name="adults" />
		  <field name="children" />
		  <field name="infants" />		  
		</group>
		<group>
		  <label for="start_date" />
		  <field name="start_date" nolabel="1" />
		  <newline />
		  <label for="end_date" />
		  <field name="end_date" nolabel="1" />
		</group>
	      </group>
	      <notebook>
		<page string="Internal Notes"  >
		  <group name="notes_group">		    
		    <field name="notes" />
		  </group>
		</page>
		<page string="Sales">
		  <group name="sales_group">
		    <field name="sale_price" />
		    <field name="sales_person_id" />
		  </group>
		</page>
	      </notebook>
	    </sheet>
	  </form>
	</field>
      </record>

      <!-- Product tree -->
      <record model="ir.ui.view" id="tourpackage_tree">
	<field name="name">touroperator.package.tree</field>
	<field name="model">tour.package</field>
	<field name="priority" eval="20"/>
	<field name="arch" type="xml">
	  <tree string="Tour Package" version="7.0">
	    <field name="name" />
	    <field name="sale_price" />	    
	  </tree>
	</field>
      </record>

      <!-- Accion que crea la vista de paquetes -->
        <record model="ir.actions.act_window" id="tourpackage_list_action">
	  <field name="name">Packages</field>
	  <field name="res_model">tour.package</field>
	  <field name="view_type">form</field>
	  <field name="view_mode">tree,form</field>
	  <field name="help" type="html">
	    <p class="oe_view_nocontent_create">
	      Click to add Tour Packages.
	    </p>
	    <p>
	      Create new awsome turistic packages.
	    </p>
	  </field>
      </record>
      <!-- Creo el menu que llama a la accion -->
      <menuitem name="Packages" string="Packages" id="menu_tour_package" parent="main_menu_manageproducts" action="tourpackage_list_action" />

    </data>
</openerp>